<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="packaging">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="name" type="VARCHAR(500)"/>
        <column name="code" type="VARCHAR(500)"/>
        <column name="description" type="VARCHAR(500)"/>
        <column name="date_start" type="TIMESTAMP"/>
        <column name="date_end" type="TIMESTAMP"/>
        <column name="price" type="NUMERIC"/>
        <column name="max_entity" type="NUMERIC"/>
        <column name="max_projet" type="NUMERIC"/>
        <column name="max_attribut" type="NUMERIC"/>
        <column name="max_indicator" type="NUMERIC"/>

        <column name="category_packaging_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="packaging"
              baseColumnNames="category_packaging_id"
              referencedTableName="category_packaging"
              referencedColumnNames="id"
              constraintName="fk_packaging_category_packaging"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="packaging_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/packaging/Packaging.csv"
            tableName="packaging">
      <column name="id" type="NUMERIC"/>
          <column name="name" type="STRING"/>
          <column name="code" type="STRING"/>
          <column name="description" type="STRING"/>
          <column name="date_start" type="TIMESTAMP"/>
          <column name="date_end" type="TIMESTAMP"/>
          <column name="price" type="NUMERIC"/>
          <column name="max_entity" type="NUMERIC"/>
          <column name="max_projet" type="NUMERIC"/>
          <column name="max_attribut" type="NUMERIC"/>
          <column name="max_indicator" type="NUMERIC"/>
        <column name="category_packaging" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
